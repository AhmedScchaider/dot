#!/usr/bin/env bash

mkdir assets project render script
cd script
git init
cd ../assets
mkdir aRoll bRoll thumb branding
cd aRoll
mkdir image motion audio
cd ../bRoll
mkdir image motion audio
cd ../thumb
mkdir image motion audio
cd ../branding
mkdir image motion audio

case "$1" in 
    intro) cd motion; cp ~/Movies/graphicsPackage/branding/intro.mov .; cp ~/Movies/graphicsPackage/branding/endCard.mov . ;;
    -p) cd ../../project; cp ~/Movies/premiereTemplate/project/Template.prproj . ;;
esac

case "$2" in
    -p) cd ../../../; cd project; cp ~/Movies/premiereTemplate/project/Template.prproj . ;;
esac
